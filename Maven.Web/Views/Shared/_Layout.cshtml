<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Libreria.Web</title>
    <script type="importmap"></script>
    @* Bootstrap 5.3.8*@
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    @* Bootstrap Icons *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    @* Estilos propios*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Libreria.Web.styles.css" asp-append-version="true" />

</head>
<body>
    <!-- Accesibilidad: salto a contenido -->
    <a class="visually-hidden-focusable position-absolute top-0 start-0 p-2 bg-body border rounded"
       href="#mainContent">
        Saltar al contenido
    </a>

    <header class="sticky-top">
        @await Html.PartialAsync("_Menu")
    </header>

    <main id="mainContent" class="flex-grow-1">
        <div class="container py-3">
            @RenderBody()
        </div>
    </main>

    <footer class="mt-auto border-top">
        <div class="container py-3 small text-muted d-flex flex-column flex-md-row gap-2 justify-content-between align-items-md-center">
            <div>
                &copy; @DateTime.Now.Year - Libreria
            </div>
            <div>
                <a class="link-secondary text-decoration-none" asp-area="" asp-controller="Home" asp-action="Privacy">
                    Privacidad
                </a>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
