@model List<Maven.Application.DTOs.UsuarioListDto>

@{
    ViewData["Title"] = "Usuarios";
}

<h2 class="mb-3">Usuarios</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        No hay usuarios registrados.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Rol</th>
                <th>Estado</th>
                <th>Registro</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.UsuarioId</td>
                    <td>@u.NombreCompleto</td>
                    <td>@u.Correo</td>
                    <td>@u.Rol</td>
                    <td>@u.Estado</td>
                    <td>@u.FechaRegistro.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}
