@model List<Maven.Application.DTOs.SubastaFinalizadaListDto>
@{
    ViewData["Title"] = "Subastas Finalizadas";
}

<h2 class="mb-3">Subastas Finalizadas</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No hay subastas finalizadas.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Imagen</th>
                    <th>Objeto</th>
                    <th>Fecha cierre</th>
                    <th>Estado final</th>
                    <th>Pujas</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td style="width:110px;">
                            @if (!string.IsNullOrWhiteSpace(s.ImagenUrl))
                            {
                                <img src="@s.ImagenUrl" class="img-fluid rounded" style="max-height:70px;" />
                            }
                            else
                            {
                                <span class="text-muted">Sin imagen</span>
                            }
                        </td>
                        <td>@s.Objeto</td>
                        <td>@s.FechaCierre.ToString("yyyy-MM-dd")</td>
                        <td>
                            <span class="badge @(s.EstadoFinal == "FINALIZADA" ? "bg-success" : "bg-danger")">
                                @s.EstadoFinal
                            </span>
                        </td>
                        <td><span class="badge bg-dark">@s.CantidadPujas</span></td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary"
                               asp-controller="Subasta" asp-action="Detalle" asp-route-id="@s.SubastaId">
                                Ver detalle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
