@{
    ViewData["Title"] = "Inicio";
}

<section class="py-5 text-center bg-light rounded-3 mb-4 shadow-sm">
    <div class="container">
        <h1 class="display-5 fw-bold mb-3">
            Bienvenido a la Librería Virtual
        </h1>

        <p class="lead text-muted mb-4">
            Explora autores, libros y reportes con una interfaz clara y moderna.
        </p>

        @if (ViewBag.Id != null)
        {
            <span class="badge text-bg-primary fs-6 px-3 py-2">
                Identificador activo: @ViewBag.Id
            </span>
        }
    </div>
</section>

<!-- CAROUSEL -->
<div id="carruselHome" class="carousel slide mb-5 shadow rounded overflow-hidden" data-bs-ride="carousel">

    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carruselHome" data-bs-slide-to="0"
                class="active" aria-current="true" aria-label="Imagen 1"></button>
        <button type="button" data-bs-target="#carruselHome" data-bs-slide-to="1"
                aria-label="Imagen 2"></button>
        <button type="button" data-bs-target="#carruselHome" data-bs-slide-to="2"
                aria-label="Imagen 3"></button>
    </div>

    <div class="carousel-inner">

        <div class="carousel-item active">
            <img src="~/images/slide-1.jpg" class="d-block w-100 object-fit-cover" style="height:460px;" loading="lazy" alt="Libros en estantería">
            <div class="carousel-caption bg-dark bg-opacity-50 p-3 rounded-3">
                <h5 class="fw-bold">Bienvenido a tu biblioteca digital</h5>
                <p>Explora contenido organizado y accesible.</p>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/images/slide-2.jpg" class="d-block w-100 object-fit-cover" style="height:460px;" loading="lazy" alt="Autores destacados">
            <div class="carousel-caption bg-dark bg-opacity-50 p-3 rounded-3">
                <h5 class="fw-bold">Autores destacados</h5>
                <p>Conoce los creadores detrás de cada obra.</p>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/images/slide-3.png" class="d-block w-100 object-fit-cover" style="height:460px;" loading="lazy" alt="Reportes de ventas y estadísticas">
            <div class="carousel-caption bg-dark bg-opacity-50 p-3 rounded-3">
                <h5 class="fw-bold">Reportes y estadísticas</h5>
                <p>Obtén reportes claros para tomar mejores decisiones.</p>
            </div>
        </div>
    </div>

    <!-- Controles -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carruselHome" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
        <span class="visually-hidden">Anterior</span>
    </button>

    <button class="carousel-control-next" type="button" data-bs-target="#carruselHome" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
        <span class="visually-hidden">Siguiente</span>
    </button>

</div>

<!-- ACCESOS RÁPIDOS -->
<section class="container mb-5">
    <h2 class="h4 fw-bold mb-4 text-center">Accesos rápidos</h2>

    <div class="row g-4">

        <!-- Autores -->
        <div class="col-12 col-md-4">
            <a asp-controller="Autor" asp-action="Index" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-people fs-1 mb-3 text-primary"></i>
                        <h5 class="fw-semibold">Autores</h5>
                        <p class="text-muted small">Gestiona y visualiza tus autores registrados.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Libros -->
        <div class="col-12 col-md-4">
            <a asp-controller="Libro" asp-action="Index" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-book-half fs-1 mb-3 text-success"></i>
                        <h5 class="fw-semibold">Libros</h5>
                        <p class="text-muted small">Consulta el catálogo de libros disponible.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Reportes -->
        <div class="col-12 col-md-4">
            <a asp-controller="Reporte" asp-action="GraficoVentas" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-bar-chart-line fs-1 mb-3 text-danger"></i>
                        <h5 class="fw-semibold">Reportes</h5>
                        <p class="text-muted small">Visualiza estadísticas y reportes de ventas.</p>
                    </div>
                </div>
            </a>
        </div>

    </div>
</section>

@section Scripts {
    <script>
        const myCarouselElement = document.querySelector('#carruselHome')

        const carousel = new bootstrap.Carousel(myCarouselElement, {
            interval: 3500,
            pause: false,
            ride: 'carousel'
        })
    </script>

    <style>
        .hover-card:hover {
            transform: translateY(-4px);
            transition: all 0.25s ease;
            box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.1);
        }
    </style>
}
